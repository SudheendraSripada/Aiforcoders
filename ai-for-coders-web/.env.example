# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_URL=http://localhost:3000
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
SECRET_KEY=your-encryption-secret-key-change-in-production-please

# =============================================================================
# GOOGLE GEMINI AI
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# DATABASE (Optional - for future use)
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/ai_for_coders

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =============================================================================
# ENCRYPTION
# =============================================================================
ENCRYPTION_KEY=your-encryption-key-must-be-32-characters
ENCRYPTION_IV=your-iv-must-be-16-characters

# =============================================================================
# VERCEL SPECIFIC (Optional)
# =============================================================================
# These are automatically set by Vercel
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app